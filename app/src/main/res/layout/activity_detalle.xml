<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalleMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetalleActivity">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Fondo de papel viejo"
        android:scaleType="centerCrop"
        android:src="@drawable/libro" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_book_cover"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="16dp"
                    android:background="#00D3D3D3"
                    android:contentDescription="Portada del libro"
                    android:scaleType="centerCrop"
                    android:src="@drawable/portada_generica" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTituloLibro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="titulo"
                        android:textColor="#36454F"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="author"
                        android:textColor="#A9A9A9"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGenero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/rounded_tag"
                            android:padding="8dp"
                            android:text="FantasÃ­a"
                            android:textColor="#36454F"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#D3D3D3" />

            <TextView
                android:id="@+id/tvDetalle"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:text="Detalle del libro"
                android:textColor="#36454F"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="157dp"
                android:layout_height="83dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Volver"
                android:elevation="10dp"
                android:src="@drawable/ic_volver_arrow"

                app:tint="#7A3301" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

